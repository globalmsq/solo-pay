{
  "name": "@solo-pay/contracts",
  "version": "0.1.0",
  "private": true,
  "description": "Solo Pay Onchain Smart Contracts",
  "exports": {
    "./artifacts/*": "./artifacts/*"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "typecheck": "tsc --noEmit",
    "lint": "solhint 'src/**/*.sol'",
    "lint:fix": "solhint 'src/**/*.sol' --fix",
    "clean": "hardhat clean && rm -rf cache artifacts typechain-types",
    "deploy:local": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network localhost",
    "deploy:amoy": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network polygonAmoy",
    "deploy:polygon": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network polygon",
    "deploy:sepolia": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network ethereumSepolia",
    "deploy:ethereum": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network ethereum",
    "deploy:bnb-testnet": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network bnbTestnet",
    "deploy:bnb": "hardhat ignition deploy ./ignition/modules/PaymentGateway.ts --network bnb",
    "verify:amoy": "hardhat ignition verify chain-80002",
    "verify:polygon": "hardhat ignition verify chain-137",
    "verify:sepolia": "hardhat ignition verify chain-11155111",
    "verify:ethereum": "hardhat ignition verify chain-1",
    "verify:bnb-testnet": "hardhat ignition verify chain-97",
    "verify:bnb": "hardhat ignition verify chain-56"
  },
  "devDependencies": {
    "solhint": "^6.0.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.16",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/ignition-core": "^0.15.15",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/contracts": "^5.1.0",
    "@openzeppelin/contracts-upgradeable": "^5.1.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.4.0",
    "ethers": "^6.11.0",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^2.0.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": "^10.9.0",
    "typechain": "^8.3.0",
    "typescript": "^5.4.0"
  }
}
