{
  "name": "@msqpay/simple-relayer",
  "version": "1.0.0",
  "description": "Simple HTTP service for gasless transaction relay (Defender/msq-relayer compatible)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fastify": "^5.0.0",
    "pino-pretty": "^11.0.0",
    "viem": "^2.44.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.14"
  },
  "keywords": [
    "defender",
    "mock",
    "gasless",
    "blockchain",
    "relay",
    "http-service"
  ],
  "author": "MSQ Team",
  "license": "MIT"
}
