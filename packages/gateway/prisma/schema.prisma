// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  CREATED
  PENDING
  CONFIRMED
  FAILED
  EXPIRED
}

enum RelayStatus {
  QUEUED
  SUBMITTED
  CONFIRMED
  FAILED
}

enum EventType {
  CREATED
  STATUS_CHANGED
  RELAY_SUBMITTED
  RELAY_CONFIRMED
  EXPIRED
  REFUND_REQUESTED
  REFUND_SUBMITTED
  REFUND_CONFIRMED
  REFUND_FAILED
}

enum RefundStatus {
  PENDING
  SUBMITTED
  CONFIRMED
  FAILED
}

model Chain {
  id               Int      @id @default(autoincrement())
  network_id       Int      @unique  // EIP-155 chain ID
  name             String   @db.VarChar(255)
  rpc_url          String   @db.VarChar(500)
  gateway_address   String?  @db.VarChar(42)  // PaymentGateway proxy address
  forwarder_address String?  @db.VarChar(42)  // ERC2771Forwarder address
  is_testnet       Boolean  @default(false)
  is_enabled       Boolean  @default(true)
  is_deleted       Boolean  @default(false)
  deleted_at       DateTime?
  created_at       DateTime @default(now())
  updated_at       DateTime @default(now()) @updatedAt

  @@map("chains")
}

model Token {
  id              Int      @id @default(autoincrement())
  chain_id        Int      // logical reference to chains.id
  address         String   @db.VarChar(42)
  symbol          String   @db.VarChar(20)
  decimals        Int
  is_enabled      Boolean  @default(true)
  is_deleted      Boolean  @default(false)
  deleted_at      DateTime?
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now()) @updatedAt

  @@unique([chain_id, address])
  @@map("tokens")
}

model Merchant {
  id                Int      @id @default(autoincrement())
  merchant_key      String   @unique @db.VarChar(255)
  name              String   @db.VarChar(255)
  chain_id          Int      // logical reference to chains.id
  api_key_hash      String   @unique @db.VarChar(64) // SHA-256 hash; one API key per merchant
  public_key        String?  @unique @db.VarChar(255) // pk_live_xxx for client-side integration
  public_key_hash   String?  @unique @db.VarChar(64) // SHA-256 hash of public_key (same pattern as api_key_hash)
  allowed_domains   Json?    // List of domains allowed for public_key usage
  webhook_url       String?  @db.VarChar(500)
  fee_bps           Int      @default(0)                     // 0 ~ 10000 basis points (100% = 10000)
  recipient_address String?  @db.VarChar(42)                 // 0x... Ethereum address
  is_enabled        Boolean  @default(true)
  is_deleted        Boolean  @default(false)
  deleted_at        DateTime?
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now()) @updatedAt

  @@map("merchants")
}

// Note: recipient_address removed - contract pays to treasury (set at deployment)
model MerchantPaymentMethod {
  id                Int      @id @default(autoincrement())
  merchant_id       Int      // logical reference
  token_id          Int      // logical reference
  is_enabled        Boolean  @default(true)
  is_deleted        Boolean  @default(false)
  deleted_at        DateTime?
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now()) @updatedAt

  @@unique([merchant_id, token_id])
  @@map("merchant_payment_methods")
}

model Payment {
  id                    Int           @id @default(autoincrement())
  payment_hash          String        @unique @db.VarChar(66)  // bytes32
  merchant_id           Int
  payment_method_id     Int
  amount                Decimal       @db.Decimal(65, 0)  // wei (max uint256)
  token_decimals        Int           // snapshot
  token_symbol          String        @db.VarChar(20) // snapshot
  network_id            Int           // snapshot of chain's network_id
  status                PaymentStatus @default(CREATED)
  tx_hash               String?       @db.VarChar(66)
  expires_at            DateTime
  confirmed_at          DateTime?
  order_id              String?       @db.VarChar(255) // merchant order ID (client-side integration)
  success_url           String?       @db.VarChar(500) // redirect URL on payment success
  fail_url              String?       @db.VarChar(500) // redirect URL on payment failure/cancel
  webhook_url           String?       @db.VarChar(500) // per-payment webhook (fallback: merchant.webhook_url)
  origin                String?       @db.VarChar(500) // request origin for domain verification audit
  payer_address         String?       @db.VarChar(42)  // payer wallet address
  created_at            DateTime      @default(now())
  updated_at            DateTime      @default(now()) @updatedAt

  @@index([merchant_id])
  @@index([status])
  @@index([order_id, merchant_id])
  @@map("payments")
}

model RelayRequest {
  id              Int         @id @default(autoincrement())
  relay_ref       String      @unique @db.VarChar(255)
  payment_id      Int
  status          RelayStatus @default(QUEUED)
  gas_estimate    Decimal?    @db.Decimal(65, 0)
  gas_used        Decimal?    @db.Decimal(65, 0)
  tx_hash         String?     @db.VarChar(66)
  error_message   String?     @db.Text
  submitted_at    DateTime?
  confirmed_at    DateTime?
  created_at      DateTime    @default(now())
  updated_at      DateTime    @default(now()) @updatedAt

  @@index([payment_id])
  @@map("relay_requests")
}

model PaymentEvent {
  id          Int       @id @default(autoincrement())
  payment_id  Int
  event_type  EventType
  old_status  String?   @db.VarChar(20)
  new_status  String?   @db.VarChar(20)
  metadata    Json?
  created_at  DateTime  @default(now())

  @@index([payment_id])
  @@map("payment_events")
}

model Refund {
  id              Int          @id @default(autoincrement())
  refund_hash     String       @unique @db.VarChar(66)  // bytes32, unique refund identifier
  payment_id      Int          // FK to payments.id
  merchant_id     Int          // FK to merchants.id (denormalized for query efficiency)
  amount          Decimal      @db.Decimal(65, 0)       // refund amount in wei
  token_address   String       @db.VarChar(42)          // token contract address
  payer_address   String       @db.VarChar(42)          // refund recipient (original payer)
  status          RefundStatus @default(PENDING)
  reason          String?      @db.VarChar(500)         // refund reason (optional)
  tx_hash         String?      @db.VarChar(66)          // refund transaction hash
  error_message   String?      @db.Text                 // error message on failure
  submitted_at    DateTime?                             // relayer submission time
  confirmed_at    DateTime?                             // on-chain confirmation time
  created_at      DateTime     @default(now())
  updated_at      DateTime     @default(now()) @updatedAt

  @@index([payment_id])
  @@index([merchant_id])
  @@index([status])
  @@index([created_at])
  @@map("refunds")
}
