// Subset of gateway schema for faucet-manager service (same DB, same tables)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chain {
  id                Int     @id @default(autoincrement())
  network_id         Int     @unique
  name              String  @db.VarChar(255)
  rpc_url           String  @db.VarChar(500)
  gateway_address   String? @db.VarChar(42)
  forwarder_address String? @db.VarChar(42)
  is_testnet        Boolean @default(false)
  is_enabled        Boolean @default(true)
  is_deleted        Boolean @default(false)
  deleted_at        DateTime?
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now()) @updatedAt

  @@map("chains")
}

model Token {
  id         Int      @id @default(autoincrement())
  chain_id   Int
  address    String   @db.VarChar(42)
  symbol     String   @db.VarChar(20)
  decimals   Int
  is_enabled Boolean  @default(true)
  is_deleted Boolean  @default(false)
  deleted_at DateTime?
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt

  @@unique([chain_id, address])
  @@map("tokens")
}

model Merchant {
  id                Int      @id @default(autoincrement())
  merchant_key      String   @unique @db.VarChar(255)
  name              String   @db.VarChar(255)
  chain_id          Int
  api_key_hash      String   @unique @db.VarChar(64)
  public_key        String?  @unique @db.VarChar(255)
  public_key_hash   String?  @unique @db.VarChar(64)
  allowed_domains   Json?
  webhook_url       String?  @db.VarChar(500)
  fee_bps           Int      @default(0)
  recipient_address String?  @db.VarChar(42)
  is_enabled        Boolean  @default(true)
  is_deleted        Boolean  @default(false)
  deleted_at        DateTime?
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now()) @updatedAt

  @@map("merchants")
}

model MerchantPaymentMethod {
  id          Int      @id @default(autoincrement())
  merchant_id Int
  token_id    Int
  is_enabled  Boolean  @default(true)
  is_deleted  Boolean  @default(false)
  deleted_at  DateTime?
  created_at  DateTime @default(now())
  updated_at  DateTime @default(now()) @updatedAt

  @@unique([merchant_id, token_id])
  @@map("merchant_payment_methods")
}

model Payment {
  id                    Int      @id @default(autoincrement())
  payment_hash          String   @unique @db.VarChar(66)
  merchant_id           Int
  payment_method_id     Int
  amount                Decimal  @db.Decimal(65, 0)
  token_decimals        Int
  token_symbol          String   @db.VarChar(20)
  network_id            Int
  status                String   @db.VarChar(20)
  tx_hash               String?  @db.VarChar(66)
  expires_at            DateTime
  confirmed_at          DateTime?
  order_id              String?  @db.VarChar(255)
  success_url           String?  @db.VarChar(500)
  fail_url              String?  @db.VarChar(500)
  webhook_url           String?  @db.VarChar(500)
  origin                String?  @db.VarChar(500)
  payer_address         String?  @db.VarChar(42)
  created_at            DateTime @default(now())
  updated_at            DateTime @default(now()) @updatedAt

  @@map("payments")
}

model WalletGasGrant {
  id             Int       @id @default(autoincrement())
  wallet_address String    @db.VarChar(42)
  chain_id       Int
  amount         String    @db.VarChar(78)
  tx_hash        String?   @db.VarChar(66)
  created_at     DateTime  @default(now())

  @@unique([wallet_address, chain_id])
  @@map("wallet_gas_grants")
}
