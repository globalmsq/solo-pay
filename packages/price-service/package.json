    "pino": "^10.1.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "tsx": "^4.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.14",
    "vitest-mock-extended": "^2.0.0"
  },
  "keywords": [
    "price",
    "coinmarketcap",
    "redis",
