{
  "name": "@solo-pay/price-service",
  "version": "1.0.0",
  "description": "Token price service with CoinMarketCap API and Redis caching",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
