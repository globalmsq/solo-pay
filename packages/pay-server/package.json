{
  "name": "@msq/pay-server",
  "version": "0.1.0",
  "description": "MSQ Pay Server - Payment API server with Fastify",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prisma:generate": "prisma generate",
    "build": "prisma generate && tsc -p tsconfig.build.json",
    "start": "tsx src/index.ts",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "lint": "eslint",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.4",
    "@msq/pay-contracts": "workspace:*",
    "@prisma/client": "^6.0.0",
    "dotenv": "^16.4.0",
    "fastify": "^5.0.0",
    "ioredis": "^5.4.0",
    "pino": "^10.1.0",
    "tsx": "^4.7.0",
    "viem": "^2.44.4",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^4.0.17",
    "prisma": "^6.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.14",
    "vitest-mock-extended": "^3.1.0"
  },
  "keywords": [
    "payment",
    "api",
    "fastify",
    "blockchain",
    "polygon"
  ],
  "author": "MSQ Team",
  "license": "MIT"
}
