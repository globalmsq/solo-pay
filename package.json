{
  "name": "@solo-pay/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "SoloPay - Blockchain Payment Gateway Monorepo",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r --filter '!@solo-pay/integration-tests' test",
    "test:coverage": "pnpm -r --filter '!@solo-pay/integration-tests' test:coverage",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean",
    "format": "prettier --check \"**/*.{ts,tsx,js,json,md,yaml}\"",
    "format:fix": "prettier --write \"**/*.{ts,tsx,js,json,md,yaml}\""
  },
  "keywords": [
    "blockchain",
    "payment",
    "erc20",
    "polygon",
    "meta-transaction"
  ],
  "author": "MSQ Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.28.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.0.0",
    "@next/eslint-plugin-next": "^16.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.0",
    "typescript-eslint": "^8.53.0"
  },
  "pnpm": {
    "overrides": {
      "hardhat-gas-reporter": "^2.3.0",
      "ioredis": "^5.4.0"
    }
  }
}
